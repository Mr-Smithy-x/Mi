<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/permissions_fragment">


    <fragment
        android:id="@+id/console_fragment"
        android:name="nyc.vonley.mi.ui.main.fragments.ConsoleFragment"
        android:label="Consoles" >

        <action
            android:id="@+id/action_payload_to_console"
            app:destination="@id/payload_fragment" />

        <action
            android:id="@+id/action_permissions"
            app:destination="@id/permissions_fragment"
            app:popUpTo="@id/console_fragment"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="nyc.vonley.mi.ui.main.fragments.PermissionsFragment"
        android:label="PermissionsFragment">
        <action
            android:id="@+id/action_permissions_to_console"
            app:destination="@id/console_fragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/payload_fragment"
        android:name="nyc.vonley.mi.ui.main.fragments.PayloadFragment"
        tools:layout="@layout/fragment_payload"
        android:label="Payload" >
        <argument
            android:name="root_directory"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/fragment_ftp"
        android:name="nyc.vonley.mi.ui.main.fragments.FTPFragment"
        android:label="FTP"
        tools:layout="@layout/fragment_f_t_p">

        <argument
            android:name="remote_root_directory"
            app:argType="string" />

        <argument
            android:name="root_directory"
            app:argType="string" />
    </fragment>


</navigation>