<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/material_red</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <!--<item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>-->
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/material_red</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>


    <style name="MiInputTextAppearance" parent="TextAppearance.AppCompat">

        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="MiInputTextAppearance.Error" parent="MiInputTextAppearance">
        <item name="android:textColor">@color/material_red</item>
    </style>
    <style name="MiInputTextAppearance.Helper" parent="MiInputTextAppearance">
        <item name="android:textColor">@color/green</item>
    </style>
    <style name="MiInputTextAppearance.Place" parent="MiInputTextAppearance">
        <item name="android:textColor">@color/grey_darker</item>
    </style>
    <style name="MiInputTextAppearance.Hint" parent="MiInputTextAppearance">
        <item name="android:textColor">@color/grey_darker</item>
    </style>

    <style name="MiInputInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/grey</item>
        <item name="boxBackgroundMode">none</item>
        <item name="android:textColorHint">@color/grey_darker</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="expandedHintEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="boxStrokeWidth">1dp</item>

        <item name="errorTextAppearance">@style/MiInputTextAppearance.Error</item>
        <item name="helperTextTextAppearance">@style/MiInputTextAppearance.Helper</item>
        <item name="hintTextAppearance">@style/MiInputTextAppearance.Hint</item>
        <item name="placeholderTextAppearance">@style/MiInputTextAppearance.Place</item>

    </style>
</resources>