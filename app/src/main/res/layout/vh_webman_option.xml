<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/material_red"
    android:layout_height="210dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/webman_game_cover"
        android:layout_width="match_parent"
        app:srcCompat="@mipmap/orb"
        android:scaleType="centerCrop"
        android:layout_height="160dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/webman_game_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_darker"
        android:textColor="@color/white"
        android:layout_below="@id/webman_game_cover"
        android:ellipsize="marquee"
        android:textAlignment="center"
        android:gravity="center"
        android:padding="12dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Example" />
</RelativeLayout>